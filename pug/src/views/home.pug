html 
    head 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css")
        title Home 
    body 
        h2(class="text-center my-3") Ingrese un producto 
        hr

        div(class="mb-3 mx-3")
            form(action="/productos" method="post")
                label(for="name" class="form-label mx-3") Producto
                input(type="text" class="form-control mx-auto" id="title" name="title")

                label(for="price" class="form-label mx-3") Precio
                input(type="number" class="form-control mx-auto" id="price" name="price")

                label(for="thumbnail" class="form-label mx-3") Imagen
                input(type="text" class="form-control mx-auto" id="thumbnail" name="thumbnail")

                button(type="submit" class="btn btn-dark d-block mt-3 mx-auto") Enviar

        
        button(class="btn btn-dark d-block mx-auto")
            a(class="text-decoration-none text-light" href="/productos") Ir a vista


