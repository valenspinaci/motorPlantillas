html 
    head 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css")
        title Productos
    body 
        h2(class="text-center my-3") Vista de productos

        hr

        table(class="table")
            thead 
                tr 
                    th(scope="col") #
                    th(scope="col") Producto
                    th(scope="col") Precio 
                    th(scope="col") Imagen

            tbody 
                each producto in productos 
                    tr 
                        th(scope="row") !{producto.id} 
                        td !{producto.title}
                        td !{producto.price}
                        td 
                            img(style="width:70px" src=producto.thumbnail  alt="!{producto.title}")

        button(class="btn btn-dark d-block mx-auto")
            a(class="text-decoration-none text-light" href="/") Volver a inicio
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous") 