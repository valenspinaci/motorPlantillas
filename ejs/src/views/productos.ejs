<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <title>Productos</title>
</head>
<body>
    <h2 class="text-center my-3">Vista de productos</h2>

    <hr>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
            <% productos.forEach((producto)=>{ %>
                <tr>
                    <th scope="row"><%= producto.id %></th>
                    <td><%= producto.title %></td>
                    <td><%= producto.price %></td>
                    <td><img style="width: 70px;" src="<%= producto.thumbnail %>" alt="<%= producto.title %>"></td>
                </tr>
            <% }) %>
    </tbody>
</table>

    <button class="btn btn-dark d-block mx-auto"><a class="text-decoration-none text-light" href="/">Volver a inicio</a></button>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>